{
  "env": { "es2022": true, "node": true, "jest": true },
  "extends": ["eslint:recommended"],
  "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
  "rules": {
    "no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
    ],
    "no-undef": "error",
    "no-console": "off"
  },
  "ignorePatterns": ["coverage/", "node_modules/"]
}
